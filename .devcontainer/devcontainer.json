// .devcontainer/devcontainer.json
{
  "name": "Python Flight Simulator",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python"
      ]
    }
  },
  "postCreateCommand": "pip install pyfly PyOpenGL Pygame numpy",
  "forwardPorts": [8000],
  "portsAttributes": {
    "8000": {
      "label": "Application"
    }
  }
}
